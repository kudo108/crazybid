<%if(defined?in_form)%>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:class=>"form-inline") do |f| %>
  <%= f.email_field :email,:class=>"input_small",:placeholder=>"Email" %>
  <%= f.password_field :password,:class=>"input_small",:placeholder=>"Password" %>
  <br/>
  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end -%>

  <%= f.submit "Sign in"%>
<% end %>
<%= link_to "Forgot your password?", new_password_path(resource_name),:style=>"color:white"%>
<%else%>
  <div id="out_login_form">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <div>
  <%= f.email_field :email,:class=>"input_small",:placeholder=>"Email" %>
  </div>
  <div>
  <%= f.password_field :password,:class=>"input_small",:placeholder=>"Password" %>
  </div>
  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> Remember me<br/><br/>
  <% end -%>

  <%= f.submit "Sign in"%>
  <% end %>
  <%= link_to "Forgot your password?", new_password_path(resource_name)%>
  </div>

<%end%>